{
  "version": 2,
  "builds": [
    { "src": "dist/public/api/**/*.js", "use": "@vercel/node" },
    { "src": "dist/client/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/dist/public/api/$1" },
    { "src": "/(.*)", "dest": "/dist/client/$1" },
    { "src": "/(.*)", "dest": "/dist/client/index.html" }
  ]
}
